<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="257dp"
                android:layout_height="wrap_content"
                android:text="BlueTooth"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/BList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="List" />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/Bconnect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect"
                android:textSize="20dip" />

            <Button
                android:id="@+id/BdisConnect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DisConnect"
                android:textSize="20dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/BPowerOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ON"
                android:textSize="20dip" />

            <Button
                android:id="@+id/BPowerOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OFF"
                android:textSize="20dip" />

            <Button
                android:id="@+id/BGetStatus"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="GetStat"
                android:textSize="20dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/BSendData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SendData"
                android:textSize="20dip" />

            <EditText
                android:id="@+id/ESendData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/BSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SendData"
                android:textSize="20dip" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/ESeedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="SeedData"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/ESeedData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/BgenUserID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SetUID"
                android:textSize="20dip" />

            <Button
                android:id="@+id/BgetUserID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GetUID"
                android:textSize="20dip" />

            <Button
                android:id="@+id/BeraseUserID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EraseUID"
                android:textSize="20dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/BGetSerial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SerialNum"
                android:textSize="20dip" />

            <Button
                android:id="@+id/BGetVersion"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="GetVersion"
                android:textSize="20dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/BWriteFlash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WriteFlash"
                android:textSize="20dip" />

            <Button
                android:id="@+id/BReadFlash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ReadFlash"
                android:textSize="20dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textoffset"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="offset"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/Eoffset"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxLength="2"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textlength"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="length"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/Elength"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxLength="2"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/EWriteFlash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/BclearReceiveData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ClearData"
                android:textSize="20dip" />

            <Button
                android:id="@+id/BExit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exit"
                android:textSize="20dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/ESSreceive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data display"
                android:textSize="20sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/Ereceive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:ems="10"
            android:textSize="20sp" />
    </LinearLayout>

</ScrollView>